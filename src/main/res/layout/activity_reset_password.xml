<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".ResetPassword">

    <EditText
        android:id="@+id/et_enterPIN"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Enter your PIN"
        android:paddingLeft="15dp"
        android:background="@drawable/custom_background_for_edittext"
        android:inputType="numberPassword"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_confirmPassword"
        app:layout_constraintStart_toStartOf="@+id/et_confirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_confirmPassword" />

    <EditText
        android:id="@+id/et_confirmPassword"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Confirm Password"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:background="@drawable/custom_background_for_edittext"
        android:inputType="numberPassword"
        app:layout_constraintEnd_toEndOf="@+id/et_username"
        app:layout_constraintStart_toStartOf="@+id/et_username"
        app:layout_constraintTop_toBottomOf="@+id/et_username" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="300dp"
        android:layout_height="97dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:srcCompat="@drawable/logonamin" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="New Password"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:background="@drawable/custom_background_for_edittext"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/bt_resetPassword"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="Reset Password"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_enterPIN"
        app:layout_constraintStart_toStartOf="@+id/et_enterPIN"
        app:layout_constraintTop_toBottomOf="@+id/et_enterPIN" />



</androidx.constraintlayout.widget.ConstraintLayout>