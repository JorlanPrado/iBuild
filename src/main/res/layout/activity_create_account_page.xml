<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".CreateAccountPage">


    <EditText
        android:id="@+id/et_PIN_createAccountPage"
        android:layout_width="325dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_background_for_edittext"
        android:ems="10"
        android:hint="PIN"
        android:inputType="numberPassword"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/et_password_createAccountPage"
        app:layout_constraintStart_toStartOf="@+id/et_password_createAccountPage"
        app:layout_constraintTop_toBottomOf="@+id/et_password_createAccountPage" />

    <EditText
        android:id="@+id/et_password_createAccountPage"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:inputType="textPassword"
        android:background="@drawable/custom_background_for_edittext"
        app:layout_constraintEnd_toEndOf="@+id/et_username_createAccountPage"
        app:layout_constraintStart_toStartOf="@+id/et_username_createAccountPage"
        app:layout_constraintTop_toBottomOf="@+id/et_username_createAccountPage" />

    <ImageView
        android:id="@+id/logo_createAccountPage"
        android:layout_width="300dp"
        android:layout_height="97dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.18"
        app:srcCompat="@drawable/logonamin" />


    <EditText
        android:id="@+id/et_username_createAccountPage"
        android:layout_width="327dp"
        android:layout_height="63dp"
        android:layout_marginTop="70dp"
        android:ems="10"
        android:hint="Username"
        android:paddingLeft="15dp"
        android:textSize="18sp"
        android:background="@drawable/custom_background_for_edittext"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_createAccountPage" />

    <Button
        android:id="@+id/bt_createAccount"
        android:layout_width="325dp"
        android:layout_height="46dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/button"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="@+id/et_PIN_createAccountPage"
        app:layout_constraintStart_toStartOf="@+id/et_PIN_createAccountPage"
        app:layout_constraintTop_toBottomOf="@+id/et_PIN_createAccountPage" />

</androidx.constraintlayout.widget.ConstraintLayout>