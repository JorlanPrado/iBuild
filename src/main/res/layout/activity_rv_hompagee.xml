<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <EditText
        android:id="@+id/et_search_homepage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="60dp"
        android:ems="10"
        android:hint="Search"
        android:inputType="textAutoComplete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_cart_homepage"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_search_homepage"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cart" />


    <ImageView
        android:id="@+id/img_amd_builder"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_homepage"
        app:srcCompat="@drawable/amdbuilderimage" />

    <ImageView
        android:id="@+id/img_intel_builder"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_search_homepage"
        app:srcCompat="@drawable/intelbuilderimage" />

    <TextView
        android:id="@+id/tv_categories_homepage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="70dp"
        android:text="CATEGORIES"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintEnd_toEndOf="@+id/img_intel_builder"
        app:layout_constraintStart_toStartOf="@+id/img_amd_builder"
        app:layout_constraintTop_toBottomOf="@+id/et_search_homepage" />

    <ImageView
        android:id="@+id/img_cpu_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="75dp"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories_homepage"
        app:srcCompat="@drawable/cpuicon" />

    <ImageView
        android:id="@+id/img_mobo_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="75dp"
        android:src="@drawable/moboicon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintStart_toEndOf="@+id/img_cpu_icon_categories"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories_homepage" />

    <ImageView
        android:id="@+id/img_gpu_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="75dp"
        android:src="@drawable/gpuicon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintEnd_toStartOf="@+id/img_ram_icon_categories"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories_homepage" />

    <ImageView
        android:id="@+id/img_ram_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="75dp"
        android:src="@drawable/ramicon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_categories_homepage" />

    <ImageView
        android:id="@+id/img_psu_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/psuicon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_cpu_icon_categories" />

    <ImageView
        android:id="@+id/img_ssd_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/ssdicon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintStart_toEndOf="@+id/img_psu_icon_categories"
        app:layout_constraintTop_toBottomOf="@+id/img_mobo_icon_categories" />

    <ImageView
        android:id="@+id/img_hdd_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/hddicon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintEnd_toStartOf="@+id/img_monitor_icon_categories"
        app:layout_constraintTop_toBottomOf="@+id/img_gpu_icon_categories" />

    <ImageView
        android:id="@+id/img_monitor_icon_categories"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="15dp"
        android:src="@drawable/monitoricon"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ram_icon_categories" />

    <TextView
        android:id="@+id/tv_seeAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="23dp"
        android:layout_marginBottom="5dp"
        android:text="See all"
        android:textColor="@color/navyblue"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/mainContainer"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/btnav_bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/navyblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainContainer"
        app:menu="@menu/bottom_nav" />


</androidx.constraintlayout.widget.ConstraintLayout>