<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_color"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_iBuild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="iBuild"
        android:textColor="@color/black"
        android:textSize="50sp"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_ibuildLogo"
        app:layout_constraintStart_toStartOf="@+id/img_ibuildLogo"
        app:layout_constraintTop_toBottomOf="@+id/img_ibuildLogo" />

    <ImageView
        android:id="@+id/img_ibuildLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.404"
        app:srcCompat="@drawable/ibuildlogo" />

    <ProgressBar
        android:id="@+id/progressBar_start"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_iBuild"
        app:layout_constraintStart_toStartOf="@+id/tv_iBuild"
        app:layout_constraintTop_toBottomOf="@+id/tv_iBuild" />

</androidx.constraintlayout.widget.ConstraintLayout>